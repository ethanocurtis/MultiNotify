# Example .env for MultiNotify

# Reddit API credentials (from your Reddit app)
REDDIT_CLIENT_ID=your_client_id_here
REDDIT_CLIENT_SECRET=your_client_secret_here
REDDIT_USER_AGENT=multinotify-bot by u/yourusername

# Subreddit and filtering
SUBREDDIT=asubreddit
ALLOWED_FLAIR=    # Leave blank to allow ALL posts(for multiple flairs seperate with a (,) no spaces

# Webhook and notifications
DISCORD_WEBHOOK_URL=   # Discord, Slack, or other webhook URL (leave blank for DM-only mode)
CHECK_INTERVAL=300     # How often (in seconds) to check for posts
POST_LIMIT=10          # How many posts to fetch each check

# Discord bot (only needed if DM or command features are used)
ENABLE_DM=true
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_USER_IDS=123456789012345678,987654321098765432
ADMIN_USER_IDS=123456789012345678   # Users allowed to run commands
